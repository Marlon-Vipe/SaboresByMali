@model IEnumerable<SaboresByMali.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de usuarios</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Crear usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-outline-warning" asp-action="Details" asp-route-id="@item.Id">Detalle</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
